<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.t2t.trip2thai.Info"

    tools:showIn="@layout/app_bar_info">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="ABOUT THAILAND"
        android:id="@+id/tv1"
        android:textSize="30dp"
        android:textColor="@color/primary_dark"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:id="@+id/vv"
        android:background="@color/divider"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/bangkok"
        android:id="@+id/img1"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thainfo1"
        android:textSize="18dp"
        android:layout_below="@+id/img1"
        android:layout_alignParentLeft="true"
        android:id="@+id/tv2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:src="@drawable/tht"
        android:id="@+id/tht"
        android:layout_below="@+id/tv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thainfo2"
        android:layout_below="@+id/tht"
        android:id="@+id/tv3"
        android:textSize="18dp"/>


    <View
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:layout_below="@+id/tv3"
        android:layout_centerHorizontal="true"
        android:background="@color/divider"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nFUN FACTS\n"
        android:textStyle="bold"
        android:id="@+id/ff"
        android:textSize="18dp"
        android:layout_below="@+id/tv3"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:layout_below="@+id/ff"
        android:layout_centerHorizontal="true"
        android:id="@+id/v"
        android:background="@color/divider"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thainfo3"
            android:layout_below="@+id/v"
            android:id="@+id/tv4"
            android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thainfo4"
        android:textStyle="italic"
        android:layout_below="@+id/tv4"
        android:id="@+id/tv5"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It means:"
        android:textStyle="normal"
        android:layout_below="@+id/tv5"
        android:id="@+id/tv6"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thainfo5"
        android:textStyle="italic"
        android:layout_below="@+id/tv6"
        android:id="@+id/tv7"
        android:textSize="18dp"/>


    </RelativeLayout>





</ScrollView>
